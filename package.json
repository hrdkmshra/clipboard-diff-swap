{
  "name": "clipboard-diff-swap",
  "displayName": "Clipboard Diff Swap",
  "description": "Compare active file with editable clipboard content and swap between them",
  "version": "1.0.0",
  "publisher": "clipboard-diff-swap",
  "repository": {
    "type": "git",
    "url": "https://github.com/clipboard-diff-swap/vscode-extension"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "clipboard",
    "diff",
    "compare",
    "swap",
    "editor"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Clipboard Diff Swap",
      "properties": {
        "clipboardDiffSwap.editableClipboard": {
          "type": "boolean",
          "default": false,
          "description": "Make clipboard content editable in diff view. When true, creates a temporary file. When false, clipboard is read-only but no temp files are created."
        }
      }
    },
    "commands": [
      {
        "command": "clipboard-swap.compareWithClipboard",
        "title": "Compare Clipboard with Active File",
        "category": "File",
        "icon": "$(diff)"
      }
    ],
    "keybindings": [
      {
        "command": "clipboard-swap.compareWithClipboard",
        "key": "ctrl+k ctrl+shift+c",
        "mac": "cmd+k cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "clipboard-swap.compareWithClipboard",
          "when": "editorTextFocus",
          "group": "9_cutcopypaste@3"
        }
      ],
      "commandPalette": [
        {
          "command": "clipboard-swap.compareWithClipboard",
          "when": "editorIsOpen"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
